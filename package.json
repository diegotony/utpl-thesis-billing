    "@nestjs/platform-express": "^6.10.2",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/terminus": "^6.5.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.2",
    "csurf": "^1.10.0",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.2",
    "mongoose": "^5.7.12",
    "reflect-metadata": "^0.1.13",
